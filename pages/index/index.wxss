/* 轮播图区域 */
.bannerSwiper{
  width: 100%;
  height: 300rpx;
}
 .bannerSwiper .bannerItem {
  width: 100%;
  height: 100%;
}
 .bannerSwiper .bannerItem .bannerImg{
  width: 100%;
  height: 100%;
}
/* 导航区域 */
.navContent{
  display: flex;
}
.navContent .navItem{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navContent .navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color:#DC143C;
  color: white;
  border-radius: 50%;
  margin: 20rpx 0;
  font-size: 50rpx;
}
/* 推荐区域 */
.recommendConContent{
  margin: 40rpx 20rpx;
}

/* 滑块 */
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.recommendScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.recommendScroll .scrollItem .scrollImg{
  width: 200rpx;
  height: 200rpx;
}
.recommendScroll .scrollItem .scrollText{
  display: block;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;  /*webkit盒模型*/
  -webkit-line-clamp:2;  /*控制行数*/
  -webkit-box-orient: vertical;  /*规定框的子元素应该被水平或垂直排列。*/
}
/* 排行榜 */
.topList{
  padding: 40rpx 20rpx;
}
.topList .topListSwiper{
  height: 450rpx;
}
.topList .topListSwiper .topListContent{
  width: 96%;
  background-color:#fbfbfb;
  height: 100%;
}
.topList .topListSwiper .topListContent .topListTitle{
  font-size: 28rpx;
  line-height: 80rpx;
}
.musicContent{
  display: flex;
  margin-top: 20rpx;
}
.musicContent .musicImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.musicContent .musicIndex{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.musicContent .musicName{
  height: 100rpx;
  line-height: 100rpx;
}